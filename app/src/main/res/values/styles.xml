<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!--动态顶部tab切换-->
    <style name="TabPagerStrip">
        <item name="android:background">@color/white</item>
        <item name="apTabBackground">@drawable/shape_tab_bg_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="apTabIndicatorColor">@color/colorPrimary</item>
        <item name="android:fillViewport">false</item>
        <item name="apTabUnderlineColor">@color/colorPrimary</item>
        <item name="apTabDividerColor">@color/transparent</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">16dp</item>
        <item name="apTabDrawMode">text</item>
        <item name="apTabTextSelectColor">@color/textColorBlack</item>
    </style>

    <!--搜索顶部tab切换-->
    <style name="SearchTabPagerStrip">
        <item name="android:background">@color/colorPrimary</item>
        <item name="apTabBackground">@drawable/shape_tab_bg_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/textColorLightGray</item>
        <item name="android:fillViewport">false</item>
        <item name="apTabUnderlineColor">@color/white</item>
        <item name="apTabDividerColor">@color/transparent</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">16dp</item>
        <item name="apTabDrawMode">text</item>
        <item name="apTabTextSelectColor">@color/white</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Large">
        <item name="android:typeface">monospace</item>
    </style>

    <!--下劃線TextView-->
    <declare-styleable name="UnderLineTextView" >
        <attr name="underlineWidth" format="dimension" />
        <attr name="underlineColor" format="color" />
        <attr name="underlineTopMargin" format="dimension" />
    </declare-styleable>

</resources>
