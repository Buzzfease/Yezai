<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_transparent_radius">
        
        <TextView
            android:id="@+id/tvCount"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:background="@drawable/shape_team_header_count"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="+1"
            android:gravity="center"
            android:maxLines="1"/>


        <com.jywl.yezai.ui.widget.RoundImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:displayType="round_rect"
            android:layout_gravity="center_horizontal"
            app:radius="4dp"
            android:src="@mipmap/ic_default_circle_avatar"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="十二星座"
        android:textSize="12sp"
        android:gravity="center"/>

</LinearLayout>