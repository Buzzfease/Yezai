<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.jywl.yezai.ui.widget.RoundImageView
        android:id="@+id/ivAvatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_default_circle_avatar"
        app:displayType="circle"
        app:borderWidth="1dp"
        app:borderColor="@color/textColorGrey"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorBlack"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:text="清音"/>

    <TextView
        android:id="@+id/userDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorGrey"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="西安 | 35岁"/>

    <TextView
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:background="@drawable/shape_concern_primary"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@mipmap/icon_dt_guanzhu"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="关注"/>
    

</LinearLayout>