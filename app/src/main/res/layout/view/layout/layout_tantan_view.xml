<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--第一屏卡片-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <!--黑背景-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <!--头像背景-->
            <ImageView
                android:id="@+id/tvBgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0.55"
                android:src="@mipmap/ic_default_circle_avatar"/>

            <!--用户信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!--用户姓名标签-->
                <LinearLayout
                    android:id="@+id/llUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:text="柠檬"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:src="@mipmap/icon_huiyuan"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="5dp"
                        android:src="@mipmap/icon_shenfen"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="5dp"
                        android:src="@mipmap/icon_xingji"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="5dp"
                        android:src="@mipmap/icon_chaojituijian"/>

                </LinearLayout>

                <!--用户信息在线-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="西安·27岁·硕士·房地产"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <!--用户视频列表-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_marginTop="14dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                </androidx.recyclerview.widget.RecyclerView>

                <!--用户头像，关注-->
                <RelativeLayout
                    android:id="@+id/rlUser"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@color/deep_purple"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.jywl.yezai.ui.widget.RoundImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_default_circle_avatar"
                        app:borderWidth="1dp"
                        app:displayType="circle" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shape_recommend_concern"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:text="@string/concern"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <!--第二屏资料347-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <!--特色展示提示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_tese"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textSize="12sp"
                        android:gravity="bottom"
                        android:textColor="@color/gray"
                        android:text="本次推荐为会员转向特色展示，升级也在会员立享特权"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textSize="12sp"
                        android:gravity="top"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="特色展示"/>

                </LinearLayout>

            </LinearLayout>

            <!--寻找-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_find">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:text="我正在寻找西安市雁塔区，年龄在25-35岁，身高在180-190cm,学历为大学本科"
                    android:textColor="@color/textColorBlack"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:padding="20dp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/icon_dianzan"/>
                
            </RelativeLayout>

            <!--动态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:text="我的动态"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:text="(7条)"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        android:src="@mipmap/ic_avatar"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@mipmap/ic_avatar"/>

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/ic_avatar"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</ScrollView>

