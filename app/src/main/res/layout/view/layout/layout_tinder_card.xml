<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_gravity="top">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlTitle">

        <!--主布局-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--第一屏卡片-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="600dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp">

                    <!--黑背景-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <!--头像背景-->
                    <ImageView
                        android:id="@+id/tvBgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.75"
                        android:src="@mipmap/ic_default_circle_avatar"/>

                    <!--用户信息-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <!--用户姓名标签-->
                        <LinearLayout
                            android:id="@+id/llUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="21sp"
                                android:text="柠檬"/>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/icon_huiyuan"/>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/icon_shenfen"/>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/icon_xingji"/>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/icon_chaojituijian"/>

                        </LinearLayout>

                        <!--用户信息在线-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="西安·27岁·硕士·房地产"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                        <!--用户视频列表-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_marginTop="14dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="130dp">

                        </androidx.recyclerview.widget.RecyclerView>

                        <!--用户头像，关注-->
                        <RelativeLayout
                            android:id="@+id/rlUser"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:background="@color/deep_purple"
                            android:orientation="horizontal">

                            <com.jywl.yezai.ui.widget.RoundImageView
                                android:id="@+id/ivAvatar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="centerCrop"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/ic_default_circle_avatar"
                                app:borderWidth="1dp"
                                app:displayType="circle" />

                            <TextView
                                android:layout_width="55dp"
                                android:layout_height="25dp"
                                android:background="@drawable/shape_recommend_concern"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:textSize="12sp"
                                android:layout_alignParentEnd="true"
                                android:text="@string/concern"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <!--第二屏资料-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <!--特色展示提示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/icon_tese"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="top"
                            android:paddingTop="4dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/gray"
                            android:text="本次推荐为会员转向特色展示，升级也在会员立享特权"/>

                    </LinearLayout>

                </LinearLayout>

                <!--寻找-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_user_find">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="我正在寻找西安市雁塔区，年龄在25-35岁，身高在180-190cm,学历为大学本科"
                        android:textColor="@color/textColorBlack"
                        android:textSize="15sp"
                        android:maxLines="2"
                        android:padding="20dp" />

                </RelativeLayout>

                <!--点赞-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/icon_dianzan"/>

                </RelativeLayout>

                <!--动态-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="我的动态"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="(7条)"/>

                        <TextView
                            android:id="@+id/tvMoreAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看更多》"
                            android:textSize="14sp"
                            android:textColor="@color/brown"/>

                    </LinearLayout>

                    <!--动态图片三宫格-->
                    <com.jywl.yezai.ui.widget.MyMultiStateView
                        android:id="@+id/picContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:one_pic="@layout/layout_pic_view1"
                        app:two_pic="@layout/layout_pic_view2"
                        app:three_pic="@layout/layout_pic_view3"
                        app:more_than_three_pic="@layout/layout_pic_view4"
                        app:initialViewStatus="inxmlshow">

                        <com.jywl.yezai.ui.widget.WidthSquareImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                    </com.jywl.yezai.ui.widget.MyMultiStateView>

                </LinearLayout>

                <!--观点-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="我发表的观点"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="(1条)"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看更多》"
                            android:textSize="14sp"
                            android:textColor="@color/brown"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_user_find">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="你认为恋人应该具有什么品质"
                            android:textColor="@color/textColorBlack"
                            android:textSize="15sp"
                            android:gravity="center_vertical"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="14dp"
                            android:maxLines="2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="三观正，独立性，与家人相处的关系"
                            android:textStyle="bold"
                            android:textColor="@color/textColorBlack"
                            android:textSize="15sp"
                            android:gravity="center_vertical"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="14dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--点赞-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/icon_dianzan"/>

                </RelativeLayout>

                <!--资料-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="我的资料"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="(ID:77655687)"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:text="认证信息"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/icon_rz_shenfei"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="实名认证"
                                android:textColor="@color/textColorBlack"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/icon_rz_renlian"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="人脸认证"
                                android:textColor="@color/textColorBlack"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/icon_rz_wangzheng"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="网证认证"
                                android:textColor="@color/textColorBlack"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="40dp"
                        android:text="详细资料"/>

                    <!--用户信息标签-->
                    <com.jywl.yezai.ui.widget.FlowTagView
                        android:id="@+id/tagViewUserData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="40dp"
                        android:text="兴趣爱好"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorGrey"
                                android:textSize="14sp"
                                android:text="最喜欢的一道菜：松鼠鱼" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="5dp"
                                android:src="@mipmap/icon_dianzan"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorGrey"
                                android:textSize="14sp"
                                android:text="最欣赏的名人：曹操" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="5dp"
                                android:src="@mipmap/icon_dianzan"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorGrey"
                                android:textSize="14sp"
                                android:text="最喜欢的一本书：红楼梦" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="5dp"
                                android:src="@mipmap/icon_dianzan"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorGrey"
                                android:textSize="14sp"
                                android:text="最喜欢做的事：读书，旅行，健身" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="5dp"
                                android:src="@mipmap/icon_dianzan"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="40dp"
                        android:text="择偶条件"/>

                    <!--择偶条件标签-->
                    <com.jywl.yezai.ui.widget.FlowTagView
                        android:id="@+id/tagViewTargetCondition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <!--守护印象-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMyYinXiang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/textColorBlack"
                            android:textStyle="bold"
                            android:text="我的守护印象"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tvMyYinXiang"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_help"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="4dp"
                            android:text="写印象"
                            android:drawableStart="@mipmap/icon_yinxiang_bianxie"
                            android:textSize="14sp"
                            android:textColor="@color/brown"/>

                    </RelativeLayout>

                    <!--守护印象板-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_user_find">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="暂无守护印象"
                            android:textColor="@color/textColorBlack"
                            android:textSize="15sp"
                            android:maxLines="2"
                            android:padding="20dp" />

                    </RelativeLayout>

                </LinearLayout>

                <!--我的小组-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/textColorBlack"
                    android:textStyle="bold"
                    android:text="我的小组"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="vertical">

                    <com.jywl.yezai.ui.widget.RoundImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:displayType="round_rect"
                        android:layout_gravity="center_horizontal"
                        app:radius="4dp"
                        android:src="@mipmap/ic_default_circle_avatar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorBlack"
                        android:text="家有宠物"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>

                <!--我的收到的礼物-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/textColorBlack"
                    android:textStyle="bold"
                    android:text="我收到的礼物"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="110dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:src="@mipmap/icon_liwu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:background="@drawable/shape_liwu_tag"
                        android:text="你愿意做第一个送给我礼物的人吗?"
                        android:textSize="12sp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>


